<?xml version="1.0"?>
<config>
    <modules>
        <Magestic_CmsNav>
            <version>1.0.1</version>
        </Magestic_CmsNav>
    </modules>
    <global>
        <helpers>
            <magestic_cmsnav>
                <class>Magestic_CmsNav_Helper</class>
            </magestic_cmsnav>
        </helpers>
        <models>
            <magestic_cmsnav>
                <class>Magestic_CmsNav_Model</class>
            </magestic_cmsnav>
        </models>
        <resources>
            <magestic_cmsnav_setup>
                <setup>
                    <module>Magestic_CmsNav</module>
                </setup>
            </magestic_cmsnav_setup>
        </resources>
    </global>
    <frontend>
        <events>
            <page_block_html_topmenu_gethtml_before>
                <observers>
                    <magestic_cmsnav_topmenu_items>
                        <class>magestic_cmsnav/observer</class>
                        <method>addCmsPageToTopmenuItems</method>
                    </magestic_cmsnav_topmenu_items>
                </observers>
            </page_block_html_topmenu_gethtml_before>
        </events>
    </frontend>
    <adminhtml>
        <events>
            <adminhtml_cms_page_edit_tab_main_prepare_form>
                <observers>
                    <magestic_cmsnav>
                        <class>magestic_cmsnav/observer</class>
                        <method>onMainTabPrepareForm</method>
                    </magestic_cmsnav>
                </observers>
            </adminhtml_cms_page_edit_tab_main_prepare_form>
        </events>
    </adminhtml>
</config>
